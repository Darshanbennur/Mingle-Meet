<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/_5sdp">

    <LinearLayout
        android:layout_width="@dimen/_45sdp"
        android:layout_height="@dimen/_45sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:orientation="horizontal"
        android:gravity="center">
        
        <TextView
            android:id="@+id/TextFirstChar"
            android:layout_width="@dimen/_33sdp"
            android:layout_height="@dimen/_33sdp"
            android:background="@drawable/profile_picture_alternative"
            android:fontFamily="@font/poppins"
            android:gravity="center"
            android:includeFontPadding="false"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/_15ssp"/>

        <ImageView
            android:id="@+id/isOnline"
            android:layout_width="@dimen/_10sdp"
            android:layout_height="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:src="@drawable/online"/>
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/namingUser"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="start|center_horizontal|center_vertical"
            android:layout_marginStart="@dimen/_5sdp">
            
            <TextView
                android:id="@+id/userNameTemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:includeFontPadding="false"
                android:text="UserName"
                android:layout_marginTop="@dimen/_5sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_13sdp"/>

            <TextView
                android:id="@+id/userEmailTemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:textSize="@dimen/_9sdp"
                android:includeFontPadding="false"
                android:text="abc@gmail.com" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/callingFeature"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingTop="@dimen/_5sdp"
            android:gravity="center">

            <ImageView
                android:id="@+id/imageVideo"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginEnd="25dp"
                android:padding="@dimen/_2sdp"
                android:src="@drawable/ic_video"
                app:tint="@color/video_audio" />

            <ImageView
                android:id="@+id/imageCall"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginEnd="20dp"
                android:padding="@dimen/_2sdp"
                android:src="@drawable/ic_phone"
                app:tint="@color/video_audio" />

        </LinearLayout>

    </LinearLayout>



</LinearLayout>